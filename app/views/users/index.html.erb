<h1>Users list</h1>
<table>
  <thead>
    <tr>
      <th>Username</th>
      <th>Email</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <% flash.each do |name, notice| -%>
    <%= content_tag :div, notice, class: name %>
  <% end -%>
  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.username %></td>
        <td><%= user.email %></td>
        <td><%= user.account.number %></td>
        <td><%= user.account.balance %></td>
        <td><%= link_to 'Destroy', user, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= render "sessions/log" %>
<%= button_to('New User', new_user_path, method: "get") %>
<%= button_to('Atras', root_path, method: "get") %>
