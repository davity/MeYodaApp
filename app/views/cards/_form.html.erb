      <h2><%= pluralize(@card.errors.count, "error") %> prohibited this card from being saved:</h2>

      <ul>
      <% @card.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </p>
  <% end %>

  <%= f.fields_for :card_types do |fu| %>
    <div class="control-group">
      <%= fu.label :name, :class => "control-label" %>
      <div class="controls">
