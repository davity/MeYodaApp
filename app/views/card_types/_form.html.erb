<%= form_for :card_type, url: card_types_path, :html => {:class => "form-horizontal"} do |f| %>
	
	<% if @card_type.errors.any? %>
		<div id="errorExplanation">
			<h2><%= pluralize(@card_type.errors.count, "error") %> impiden guardar la carta</h2>
			<ul>
				<% @card_type.errors.full_messages.each do |msg| %>
					<li><%= msg %></li>
				<%end %>
			</ul>
		</div>
	<% end %>

	<div class="control-group">
      <%= f.label :name, :class => "control-label" %>
      <div class="controls">
        <%= f.text_field :name %>
      </div>
    </div>

    <div class="control-group">
      <%= f.label :edition, :class => "control-label" %>
      <div class="controls">
        <%= f.text_field :edition %>
      </div>
    </div>

	<div class="control-group">
      <%= f.label :photo_dir, :class => "control-label" %>
      <div class="controls">
        <%= f.text_field :photo_dir %>
      </div>
    </div>

	<div class="control-group">
      <div class="controls">
        <%= f.submit :class => "btn btn-success" %>
      </div>
    </div>
<% end %>
