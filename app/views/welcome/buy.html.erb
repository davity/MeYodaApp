<h2>Cartas cotizando</h2>
<br />
<div class="row-fluid">
  <div class="span10">
    <table class="table">
      <thead>
        <tr>
          <th>Owner username</th>
          <th>Card Name</th>
          <th>Edition</th>
          <th>Price</th>
          <th></th>
        </tr>
      </thead>
      <tbody>
        <% @card_types.each do |card_type| %>
          <%if card_type.cards.any? %>
            <tr>
              <th><%= card_type.cards.first.user.username %></th>
              <th><%= card_type.name %></th>
              <th><%= card_type.edition %></th>
              <th><%= card_type.cards.first.sale.starting_price * (1.10 + @george -1) %> â‚¬</th>
              <th><%= link_to "Pujar", {:controller => "bids", :action => "new", :card_type_id => card_type.id, :method => :get}, :class => "btn btn-small btn-success" %></th>
            </tr>
          <% end %>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
<hr>
<div class="row-fluid">
  <div class="span1">
  <%= link_to 'Inicio', root_path, :class => "btn" %>
  </div>
  <div class="span2">
    <%= link_to 'Mi Cuenta', home_path, :class => "btn" %>
  </div>  
</div>